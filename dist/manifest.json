{
  "manifest_version": 3,
  "name": "Sidekick AdRemover",
  "short_name": "Sidekick",
  "version": "1.0.0",
  "description": "Free sidebar ad blocker. No setup required - just install and browse. Lightweight, privacy-first, zero configuration.",
  "icons": {
    "16": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/content.ts-hXV3p2MV.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/content.ts-hXV3p2MV.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
